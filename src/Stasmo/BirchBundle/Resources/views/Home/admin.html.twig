<!DOCTYPE html>
<html lang="en">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset={{ _charset }}"/>
        <title>{% block title %}Birch Admin{% endblock %}</title>
        <link href='http://fonts.googleapis.com/css?family=Roboto+Slab|Roboto' rel='stylesheet' type='text/css'>
        <link href="{{ asset('/css/bootstrap.css') }}" rel="stylesheet" media="screen">

        {% block head %}{% endblock %}
    </head>
    <body>
{% for flashMessage in app.session.flashbag.get('notice') %}
    <div class="alert alert-info">
        {{ flashMessage }}
    </div>
{% endfor %}
{% for flashMessage in app.session.flashbag.get('error') %}
    <div class="alert alert-danger">
        {{ flashMessage }}
    </div>
{% endfor %}
{% for flashMessage in app.session.flashbag.get('success') %}
    <div class="alert alert-success">
        {{ flashMessage }}
    </div>
{% endfor %}
        <nav id="main-navbar" class="navbar navbar-default" role="navigation">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Birch Bartending Admin</a>
            </div>
        </nav>
        <div id="content" class="container">
            {% if form %}
            <h1>Configuration</h1>
            
            {{ form(form) }}

            {% else %}
            <p>No config present</p>
            {% endif %}
        </div>
    </body>
</html>